{
	"manifest_version": 3,
	"name": "カスタム背景",
	"version": "1.1.0",
	"description": "検索ページ（Google・Bing・Yahoo! JAPAN）の背景にお好みの画像を挿入します。",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs",
		"scripting"
	],
	"content_scripts":[
		{
			"js": [
				"CustomPageBackground.js",
				"site_css/google.js"
			],
    		"css": [
				"BackgroundImageInjector.css",
				"site_css/google.css"
			],
			"matches": [
        		"https://www.google.com/search?*"
    		]
		},
		{
			"js": [
				"CustomPageBackground.js"
			],
    		"css": [
				"BackgroundImageInjector.css",
				"site_css/bing.css"
			],
			"matches": [
        		"https://www.bing.com/search?*",
				"https://www.bing.com/images/search?*",
				"https://www.bing.com/videos/search?*",
				"https://www.bing.com/news/search?*"
    		]
		},
		{
			"js": [
				"CustomPageBackground.js",
				"site_css/bing_shopping.js"
			],
    		"css": [
				"BackgroundImageInjector.css",
				"site_css/bing.css"
			],
			"matches": [
				"https://www.bing.com/shop?*"
    		]
		},
		{
			"js": [
				"CustomPageBackground.js"
			],
    		"css": [
				"BackgroundImageInjector.css",
				"site_css/yahoo_japan.css"
			],
			"matches": [
				"https://search.yahoo.co.jp/search?*",
				"https://search.yahoo.co.jp/image/search?*",
				"https://search.yahoo.co.jp/video/search?*"
    		]
		}
	],
	"background": {
		"service_worker": "ServiceWorker.js"
	},
	"options_page": "Options.html",
	"web_accessible_resources": [
		{
			"matches": [
				"https://www.google.com/*",
				"https://www.bing.com/*",
				"https://search.yahoo.co.jp/*"
			],
    		"resources": [
				"BackgroundImageInjector.js",
				"DataStructureUpdater.js"
			]
		}
	]
}